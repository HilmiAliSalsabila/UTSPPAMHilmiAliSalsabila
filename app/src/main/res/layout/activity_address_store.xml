<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddressStore">

    <RelativeLayout
        android:id="@+id/navbar_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp">

            <ImageView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:src="@drawable/baseline_person" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="Hello,"
                android:textSize="23sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="Asep"
                android:textSize="23sp"
                android:textStyle="bold" />

        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/image_store"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/img_store"
        app:layout_constraintTop_toBottomOf="@id/navbar_profile" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/image_store">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="15dp"
            app:layout_constraintTop_toBottomOf="@id/image_store">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Store"
                android:textColor="@color/primary"
                android:textSize="23sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Cihampelas"
                android:textColor="@color/primary"
                android:textSize="19sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textColor="@color/primary"
                android:textSize="23sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Find on Maps"
                    android:textColor="@color/primary"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="23dp"
                    android:src="@drawable/baseline_location"/>

            </LinearLayout>


        </RelativeLayout>

        <Button
            android:id="@+id/seeMenuButton"
            android:layout_width="315dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginTop="29dp"
            android:backgroundTint="#D52F2F"
            android:text="See Menus"
            android:textSize="23sp"
            android:textColor="@color/white"
            app:cornerRadius="5dp"
            app:strokeColor="#F9B916"
            app:strokeWidth="1dp"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>