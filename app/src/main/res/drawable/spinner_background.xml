<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape xmlns:android="http://schemas.android.com/apk/res/android" android:clipChildren="false" android:clipToPadding="false" android:shape="rectangle">

                    <stroke android:width="1dp" android:color="#ABABAB" />

                    <corners android:radius="5dp" />

                    <solid android:color="#FFFFFF" />

                    <shadow android:color="#80000000" android:offset="5" />

                    <padding
                        android:top="15dp"
                        android:left="15dp"
                        android:bottom="15dp"
                        android:right="20dp"/>
                </shape>

            </item>
            <item>
            <bitmap android:gravity="right|center" android:src="@drawable/ic_action_name" />
            </item>
        </layer-list>
    </item>
</selector>